{{#if parent}}
    <div class="card suite-in">
{{else}}
    <div class="card suite-top">
{{/if}}
        <header class="card-header">
            {{#if parent}}
            <p class="card-header-title is-marginless">
                {{title}}
            </p>
            {{else}}
            <p class="card-header-title">
                {{title}}
            </p>
            {{/if}}
            <div class="control count">
                <div class="tags has-addons">
                        <span class="tag is-dark">Run time</span>
                        <span class="tag is-info">{{time-diff endTime startTime}}</span>
                </div>
            </div>
            <div class="control count">
                <div class="tags has-addons">
                        <span class="tag is-dark">Success</span>
                        <span class="tag is-success">{{success}}</span>
                </div>
            </div>
            <div class="control count">
                <div class="tags has-addons">
                        <span class="tag is-dark">Failed</span>
                        <span class="tag is-danger">{{failed}}</span>
                </div>
            </div>
            <div class="control count">
                <div class="tags has-addons">
                    <span class="tag is-dark">Not run</span>
                    <span class="tag is-warning">{{notrun}}</span>
                </div>
            </div>
            {{#if parent}}
            <a href="#" class="card-header-icon" aria-label="more options">
                <span class="icon">
                    <i class="fas fa-chevron-circle-down" aria-hidden="true"></i>
                </span>
            </a>  
            {{else}}  
            <a href="#" class="card-header-icon suite-parent" aria-label="more options">
                <span class="icon">
                    <i class="fas fa-chevron-circle-down" aria-hidden="true"></i>
                </span>
            </a>  
            {{/if}}         
        </header>
        <div class="card-content">
            <div class="content">
                {{#each suites}}
                    {{> reportBody }}
                {{/each}}

                {{#each testcases}}
                    {{> reportTestCase }}
                {{/each}}
            </div>
        </div>
    </div>